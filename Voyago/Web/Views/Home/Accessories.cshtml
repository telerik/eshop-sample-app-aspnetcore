@{
	ViewData["Title"] = "Accessories";
}

<div class="sub-category-container">

	@(Html.Kendo().Breadcrumb()
	.Name("breadcrumb")
	.Navigational(true)
	.Items(items =>
	{
	items.Add()
	.Type(BreadcrumbItemType.RootItem)
	.Href(@Url.Action("Index", "Home"))
	.ShowText(false)
	.Icon("home")
	.ShowIcon(true);
	items.Add()
	.Type(BreadcrumbItemType.Item)
	.Href(@Url.Action("Accessories", "Home"))
	.Text("Accessories")
	.ShowText(true);
	})
	)

	<div class="category-heading-large">Accessories</div>
	<div class="sub-category-images">
		<div>
			<a href="@Url.Action("Category", "Products")?subCategory=Bottles and Cages">
				<div class="category-heading">Botttles & Cages</div>
				<img src="~/images/bottles_cages.png" class="category-image category-large-image" />
			</a>
		</div>
		<div class="inner-1">
			<div class="inner-2">
				<div>
					<a href="@Url.Action("Category", "Products")?subCategory=Lights">
						<div class="category-heading">Lights</div>
						<img src="~/images/lights.png" class="category-image category-small-image" />
					</a>
				</div>
				<div>
					<a href="@Url.Action("Category", "Products")?subCategory=Locks">
						<div class="category-heading">Locks</div>
						<img src="~/images/locks.png" class="category-image category-small-image" />
					</a>
				</div>
			</div>
			<div>
				<a href="@Url.Action("Category", "Products")?subCategory=Tires and Tubes">
					<div class="category-heading heading-double">Tires and Tubes</div>
					<img src="~/images/tires_tubes2.png" class="category-image category-bottom-image" />
				</a>
			</div>
		</div>
		<div>
			<a href="@Url.Action("Category", "Products")?subCategory=Pumps">
				<div class="category-heading">Pumps</div>
				<img src="~/images/pumps.png" class="category-large-image" class="category-image" />
			</a>
		</div>
	</div>
</div>

<link rel="stylesheet" href="~/css/accessories.css">
