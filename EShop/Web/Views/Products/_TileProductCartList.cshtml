<div class="list-product-container">
	<a href="@Url.Action("Details", "Products")?productId=#:Id#" class="list-product-image-container">
		<img class="list-product-image" src="@Url.Action("GetProductLargePhotoById", "Products")?photoId=#:PhotoId#" alt="#:Name# image" />
	</a>

	<div class="list-product-info-container">
		<div class="list-product-details">
			<a href="@Url.Action("Details", "Products")?productId=#:Id#">
				<div class="list-product-name">#:Name#</div>
			</a>
			<div class="avg-rating">
				<span class="k-icon k-i-star"></span>
				<span class="rating-text">#:AverageRating#/5</span>
			</div>
			<p class="list-product-description">#:Description#</p>
		</div>

		<div class="list-product-controls">
			<div class="price">#:kendo.toString(FinalPrice, "c")#</div>
			<div class="buttons-container">
				@(Html.Kendo().Button()
					.Name("addToCartButton_#=Id#")
					.HtmlAttributes(new { type = "button" })
					.Icon("cart")
					.ThemeColor(ThemeColor.Primary)
					.Content("Add to cart")
					.Events(e => e.Click("addProductToShoppingCart"))
					.ToClientTemplate()
					)
				@(Html.Kendo().Button()
					.Name("addToFavoritesButton_#=Id#")
					.HtmlAttributes(new { type = "button" })
					.Icon("heart-outline")
					.Content("Add to favorites")
					.Events(e => e.Click("addProductToFavorites"))
					.ToClientTemplate()
					)
			</div>
		</div>
    </div>
</div>