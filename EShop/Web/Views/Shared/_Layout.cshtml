<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Web</title>

	<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/7.0.0/fluent/fluent-main.css" />

	<environment names="Development">
		<bundle name="wwwroot/bundles/styles.min.css" />
	</environment>
	<environment names="Staging,Production">
		<link rel="stylesheet" href="~/bundles/styles.min.css" asp-append-version="true" />
	</environment>
	
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.kendostatic.com/2023.2.829/js/jszip.min.js"></script>
	<script src="https://cdn.kendostatic.com/2023.2.829/js/kendo.all.min.js"></script>
	<script src="https://cdn.kendostatic.com/2023.2.829/js/kendo.aspnetmvc.min.js"></script>
	<script src="~/js/product_details.js"></script>
	<script src="~/js/shopping_cart.js"></script>
	<script src="~/js/datasource.js"></script>
	<script src="~/js/favorites.js"></script>
	<script src="~/js/orders.js"></script>
	<script src="~/js/other.js"></script>
</head>
<body class="k-content">

	@if (User.Identity != null && User.Identity.IsAuthenticated)
	{
		@await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
	}

	<main>
		@RenderBody()
	</main>

	@if (User.Identity != null && User.Identity.IsAuthenticated)
	{
		@await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
	}

	<script>
		$(document).ready(function () { 
			$(".login-register-container").parents('body').css("margin", "0");
			$(".header").css("visibility", "visible");
		});
	</script>

	@RenderSection("scripts", required: false)
</body>
</html>